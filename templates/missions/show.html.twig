{% extends 'base.html.twig' %}

{% block title %}Missions{% endblock %}

{% block content %}
    <h1>Mission : <small>{{ mission.codename }}</small></h1>
<div class="table-responsive-md">
    <table class="table table-striped table-bordered">
        <tbody>

            <tr>
                <th>Titre</th>
                <td>{{ mission.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ mission.description }}</td>
            </tr>
            <tr>
                <th>Nom de Code</th>
                <td>{{ mission.codename }}</td>
            </tr>
            <tr>
                <th>Date Début</th>
                <td>{{ mission.datestart ? mission.datestart|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date de Fin</th>
                <td>{{ mission.dateend ? mission.dateend|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ mission.paysmission }}</td>
            </tr>
            <tr>
                <th>Spécialité</th>
                <td>{{ mission.specialitemission }}</td>
            </tr>
            <tr>
                <th>Cibles : Nom de Code</th>
                <td>
                {% for cible in mission.cibles %}
                    {{ cible.getNamecode }} <br/>
                {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Planques</th>
                <td>
                    {% for planque in mission.planques %}
                        {{ planque }} <br/>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ mission.statutmission }}</td>
            </tr>

        </tbody>
    </table>
</div>
    <a href="{{ path('missions_index') }}" class="btn btn-primary btn-sm mr-1 mb-1">Retour Liste</a>

    <a href="{{ path('missions_edit', {'id': mission.id}) }}" class="btn btn-info btn-sm mb-1">Editer</a>

    {{ include('missions/_delete_form.html.twig') }}
{% endblock %}
