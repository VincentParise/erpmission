{% extends 'base.html.twig' %}

{% block title %}Missions{% endblock %}

{% block content %}
    <h1 class="erp-family">Mission : <small>{{ mission.codename }}</small></h1>
<div class="table-responsive-md erp-family">
    <table class="table table-striped table-bordered">
        <tbody>

            <tr>
                <th>Titre</th>
                <td>{{ mission.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ mission.description }}</td>
            </tr>
            <tr>
                <th>Nom de Code</th>
                <td>{{ mission.codename }}</td>
            </tr>
            <tr>
                <th>Date Début</th>
                <td>{{ mission.datestart ? mission.datestart|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date de Fin</th>
                <td>{{ mission.dateend ? mission.dateend|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ mission.paysmission }}</td>
            </tr>
            <tr>
                <th>Spécialité</th>
                <td>{{ mission.specialitemission }}</td>
            </tr>
            <tr>
                <th>Cible(s)</th>
                <td>
                {% for cible in mission.cibles %}
                    <strong>Nom de code : </strong>{{ cible.getNamecode }} <strong>Nom : </strong>{{ cible.lastname }}<br/>
                {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Planque(s)</th>
                <td>
                    {% for planque in mission.planques %}
                        <strong>Code : </strong>{{ planque.code }} <strong>Type : </strong>{{ planque.typeplanque }} <strong>Pays : </strong>{{ planque.paysPlanque }}<br/>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Contact(s)</th>
                <td>
                    {% for contact in mission.contacts %}
                        <strong>Code : </strong>{{ contact.codename }} <strong>Nom : </strong>{{ contact.lastname }} <br/>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Agent(s)</th>
                <td>
                    {% for agent in mission.agents %}
                        <strong>Code : </strong>{{ agent.code }} <strong>Nom : </strong>{{ agent.lastname }} <br/>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ mission.statutmission }}</td>
            </tr>

        </tbody>
    </table>
</div>
    <a href="{{ path('missions_index') }}" class="btn btn-primary btn-sm mr-1 mb-1 erp-family">Retour Liste</a>

    <a href="{{ path('missions_edit', {'id': mission.id}) }}" class="btn btn-info btn-sm mb-1 erp-family">Editer</a>

    {{ include('missions/_delete_form.html.twig') }}
{% endblock %}
