{% extends 'base.html.twig' %}

{% block content %}

    <div class="row align-items-center erp-family">

        {% if app.user %}
            <div class="col-md-6 mt-2">
                <h2 class="text-center">Bienvenue
                    {% if is_granted('ROLE_ADMIN') %} Administrateur
                    {% else %}
                        {{ app.user.firstname }}
                    {% endif %}
                    dans votre espace</h2>
                {% if is_granted('ROLE_ADMIN') %}
                    <hr>
                    <p>Accéder au Dashboard : Paramétrage divers (Pays, type missions, spécialités), paramétrer les
                        planques et les cibles :</p>
                    <a class="btn btn-info" href="{{ path('admin') }}">Dashboard</a>
                    <hr>
                    <p>Paramétrer les missions :</p>
                    <a class="btn btn-info" href="{{ path('missions_index') }}">Liste Mission(s)</a>


                {% else %}
                    <hr>
                    <p>Accéder à vos missions :</p>
                    <a class="btn btn-info" href="{{ path('agents') }}">Liste Mission(s)</a>

                {% endif %}
            </div>


        {% else %}
        <div class="col-md-6 mt-2">
            <h1 class="text-center">KGB Security Agence</h1>
            <p>Agents, Contacts, connectez vous à votre espace : Visualisez vos missions, contacts et cibles.</p>
            <p>KGB Security Agence est une agence gouvernementale qui fournit des renseignements objectifs sur les différents pays
                à travers le monde.</p>
        </div>

        {% endif %}




    </div>


{% endblock %}
