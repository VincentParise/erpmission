<body>
<header>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark erp-family">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('home') }}">
               <img src="{{ asset('/assets/img/logokgb_headers.png') }}" class="img-fluid" style="height: 75px;" alt="Logo du Kgb agency">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav me-auto mb-2 mb-md-0">
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') == 'home' %}active{% endif %}" href="{{ path('home') }}">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') == 'aboutus' %}active{% endif %}" href="{{ path('aboutus') }}">About us</a>
                    </li>
                    <li class="nav-item">
                        {% if app.user %}
                            <a class="nav-link {% if app.request.get('_route') == 'app_logout' %}active{% endif %}" href="{{ path('app_logout') }}">DÃ©connection</a>
                        {% else %}
                            <a class="nav-link {% if app.request.get('_route') == 'app_login' %}active{% endif %}" href="{{ path('app_login') }}">Connect</a>
                        {% endif %}
                    </li>
                </ul>


            </div>
        </div>
    </nav>
</header>

<main>

    <div class="container mt-5 mb-5">
      {% block content %}
      {% endblock %}
    </div>

    <footer class="d-md-flex justify-content-center align-items-center erp-family">
        <span>@Copyright 2021 - KGB</span>
    </footer>

</main><!-- /.container -->

</body>
{% block javascripts %}
    <script src="{{ asset('assets/js/erpmission.js') }}"></script>
    <script src="{{ asset('assets/js/bootstrap.bundle.min.js') }}"></script>
{% endblock %}
