{% extends 'base.html.twig' %}

{% block title %}Agents{% endblock %}

{% block content %}
    <h1 class="erp-family">Liste des Agents</h1>
    <a href="{{ path('home') }}" class="btn btn-primary erp-family">Retour</a>
    <hr>
<div class="table-responsive-md erp-family">
    <table class="mt-5 table">
        <thead>
            <tr>
                <th>Code</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Date Anniversaire</th>
                <th>Pays</th>
                <th>Spécialités</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for agent in agents %}
            <tr>
                <td>{{ agent.code }}</td>
                <td>{{ agent.firstname }}</td>
                <td>{{ agent.lastname }}</td>
                <td>{{ agent.email }}</td>
                {# <td>{{ agent.roles ? agent.roles|json_encode : '' }}</td> #}
                <td>{{ agent.birthday ? agent.birthday|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ agent.pays }}</td>
                <td>
                    {% for specialite in agent.specialites %}
                        {{ specialite }}
                    {% endfor %}
                </td>
               <td>
                    <a href="{{ path('agents_show', {'id': agent.id}) }}" class="btn btn-info btn-sm mb-1">show</a><br/>
                    <a href="{{ path('agents_edit', {'id': agent.id}) }}" class="btn btn-info btn-sm mb-1">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Pas d'agents trouvés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    <a href="{{ path('agents_new') }}" class="btn btn-info erp-family">Nouveau Agent</a>
{% endblock %}
