{% extends 'base.html.twig' %}

{% block title %}Agents index{% endblock %}

{% block content %}
    <h1>Agents index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Code</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Birthday</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for agent in agents %}
            <tr>
                <td>{{ agent.id }}</td>
                <td>{{ agent.email }}</td>
                <td>{{ agent.roles ? agent.roles|json_encode : '' }}</td>
                <td>{{ agent.password }}</td>
                <td>{{ agent.code }}</td>
                <td>{{ agent.firstname }}</td>
                <td>{{ agent.lastname }}</td>
                <td>{{ agent.birthday ? agent.birthday|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('agents_show', {'id': agent.id}) }}">show</a>
                    <a href="{{ path('agents_edit', {'id': agent.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('agents_new') }}">Create new</a>
{% endblock %}
