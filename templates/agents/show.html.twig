{% extends 'base.html.twig' %}

{% block title %}Agents{% endblock %}

{% block body %}
    <h1>Agents</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ agent.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ agent.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ agent.roles ? agent.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ agent.password }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ agent.code }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ agent.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ agent.lastname }}</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>{{ agent.birthday ? agent.birthday|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('agents_index') }}">back to list</a>

    <a href="{{ path('agents_edit', {'id': agent.id}) }}">edit</a>

    {{ include('agents/_delete_form.html.twig') }}
{% endblock %}
