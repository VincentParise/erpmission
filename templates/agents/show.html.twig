{% extends 'base.html.twig' %}

{% block title %}Agents{% endblock %}

{% block content %}
    <h1 class="erp-family">Agent : <small>{{ agent.code }}</small></h1>
<div class="table-responsive-md erp-family mt-5">
    <table class="table table-striped table-bordered">
        <tbody>
        <tr>
            <th>Code</th>
            <td>{{ agent.code }}</td>
        </tr>
        <tr>
            <th>Firstname</th>
            <td>{{ agent.firstname }}</td>
        </tr>
        <tr>
            <th>Lastname</th>
            <td>{{ agent.lastname }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ agent.email }}</td>
        </tr>
        <tr>
            <th>Birthday</th>
            <td>{{ agent.birthday ? agent.birthday|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Spécialité(s)</th>
            <td>
                {% for specialite in agent.specialites %}
                    {{ specialite }}
                {% endfor %}
            </td>
        </tr>

    </tbody>
    </table>
</div>
    <a href="{{ path('agents_index') }}" class="btn btn-primary btn-sm mr-1 mb-1 erp-family">Retour Liste</a>

    <a href="{{ path('agents_edit', {'id': agent.id}) }}" class="btn btn-info btn-sm mb-1 erp-family">Editer</a>

    {{ include('agents/_delete_form.html.twig') }}
{% endblock %}
